{
  "manifest_version": 2,

  "name": "Realtime Product Hunt Notifications",
  "description": "Next miss a post on Product Hunt with this realtime notification extension for Chrome.",
  "version": "0.0.2",

  "icons": {
    "16": "ph-icon.png",
    "48": "ph-icon.png",
    "128": "ph-icon.png"
  },

  "content_security_policy": "script-src 'self' https://js.pusher.com https://cdnjs.cloudflare.com; object-src 'self'",
  "permissions": [
    "notifications",
    "http://localhost/*",
    "http://realtime-producthunt.herokuapp.com/*",
    "http://fonts.googleapis.com/*"
  ],
  "browser_action": {
    "default_icon": "ph-icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  }
}