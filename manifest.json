{
  "manifest_version": 2,

  "name": "Realtime Product Hunt Notifications",
  "description": "Next miss a post on Product Hunt with this realtime notification extension for Chrome.",
  "version": "0.0.1",

  "content_security_policy": "script-src 'self' https://js.pusher.com https://cdnjs.cloudflare.com; object-src 'self'",
  "permissions": [
    "notifications",
    "http://localhost/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  }
}